events {
}

http {
	{% block http_context %}
		include /etc/mime.types;
		server_tokens off;

		access_log /var/log/supervisor/nginx/access.log combined;
		error_log /var/log/supervisor/nginx/error.log warn;

		sendfile on;
		tcp_nopush on;
		tcp_nodelay on;

		gzip on;
		gzip_disable "msie6";
		gzip_types text/plain text/css application/x-javascript text/xml application/xml application/xml+rss text/javascript;
		gzip_vary on;

		keepalive_timeout {{ KEEPALIVE_TIMEOUT }};
		client_max_body_size {{ CLIENT_MAX_BODY_SIZE }};

		upstream gunicorn {
			server 127.0.0.1:8000;
		}

		{% if INCLUDE_HTTP_CONF -%}
			include {{ INCLUDE_HTTP_CONF }};
		{%- endif %}

		server {
			{% block server_context %}
				{% if SERVER_NAME -%}
					server_name {{ SERVER_NAME }};
				{%- endif %}
				{% if SSL_BUNDLE -%}
					listen 443 ssl http2;
					ssl on;
					ssl_certificate {{ SSL_BUNDLE }};
					ssl_certificate_key {{ SSL_BUNDLE }};
					ssl_session_cache shared:SSL:20m;
					ssl_session_timeout 180m;
					ssl_protocols TLSv1 TLSv1.1 TLSv1.2;
					ssl_prefer_server_ciphers on;
					ssl_ciphers ECDH+AESGCM:ECDH+AES256:ECDH+AES128:DH+3DES:!ADH:!AECDH:!MD5;
					ssl_dhparam /etc/nginx/ssl/dhparam.pem;
					{% if USE_HSTS -%}
						add_header Strict-Transport-Security "max-age=31536000" always;
					{%- endif %}
					add_header X-Content-Type-Options nosniff;
					add_header X-Frame-Options SAMEORIGIN;
					{% if CA_CERT -%}
						ssl_stapling on;
						ssl_stapling_verify on;
						ssl_trusted_certificate {{ CA_CERT }};
					{%- endif %}
				{%- else -%}
					listen 80;
				{%- endif %}

				location / {
					{% block root_location %}
						proxy_redirect      off;
						proxy_set_header    Host                    $host:$server_port;
						proxy_set_header    X-Real-IP               $remote_addr;
						proxy_set_header    X-Forwarded-For         $proxy_add_x_forwarded_for;
						proxy_set_header    X-Forwarded-Protocol    $scheme;
						proxy_pass          http://gunicorn;
					{% endblock %}
				}

				location {{ STATIC_URL }} {
					{% block static_location %}
						alias           {{ STATIC_ROOT }};
						access_log      off;
						log_not_found   off;
						expires         7d;
						add_header      pragma public;
						add_header      cache-control "public";
					{%  endblock %}
				}

				{% if INCLUDE_SERVER_CONF -%}
					include {{ INCLUDE_SERVER_CONF }};
				{%- endif %}
			{% endblock %}
		}

		{% if SSL_BUNDLE -%}
			server {
				listen 80;
				{% if SERVER_NAME -%}
					server_name {{ SERVER_NAME }};
				{%- endif %}
				return 301 https://$host$request_uri;
			}
		{%- endif %}
	{% endblock %}
}
